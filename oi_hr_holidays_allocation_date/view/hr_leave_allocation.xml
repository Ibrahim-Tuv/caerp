<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<record id="hr_leave_allocation_view_form_manager" model="ir.ui.view">
		<field name="name">hr.leave.allocation.form.dates</field>
		<field name="model">hr.leave.allocation</field>
		<field name="inherit_id" ref="hr_holidays.hr_leave_allocation_view_form_manager" />
		<field name="arch" type="xml">
			<group name="alloc_right_col" position="inside">
				<field name="period_date_from" attrs="{'invisible' : [('allocation_type','!=', 'accrual')] , 'required' : [('period_date_to','!=', False)]}" />
				<field name="period_date_to" attrs="{'invisible' : [('allocation_type','!=', 'accrual')] , 'required' : [('period_date_from','!=', False)]}"/>
			</group>
		</field>
	</record>

</odoo>