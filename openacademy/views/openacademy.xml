<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.actions.act_window" id="action_list_courses">
        <field name="name">Courses</field>
        <field name="res_model">openacademy.course</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.ui.view" id="courses_tree_view">
        <field name="name">courses.tree</field>
        <field name="model">openacademy.course</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <tree string="Courses list">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="courses_form_view">
        <field name="name">courses.form</field>
        <field name="model">openacademy.course</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <form string="Idea form">

                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>


                    </group>


                </sheet>


            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="courses_search_view">
        <field name="name">Courses Search</field>
        <field name="model">openacademy.course</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="description"/>
            </search>
        </field>
    </record>
    <menuitem id="menu_openacademy" name="Open Academy" sequence="10"
              action="action_list_courses"/>

</odoo>
